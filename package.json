{
  "name": "td_api",
  "packageManager": "yarn@3.6.0",
  "version": "1.0.0",
  "description": "Simple Express API using docker",
  "main": "./index.js",
  "author": "Pol Casabayo",
  "license": "MIT",
  "scripts": {
    "dev": "docker compose up mysqldb -d && nodemon",
    "dev:stop": "docker compose down",
    "dev:clean": "docker compose down --volumes",
    "build": "tsc -p tsconfig.build.json",
    "build:clean": "rm -rf dist && tsc -p tsconfig.build.json",
    "lint": "eslint \"{src,tests}/**/*.ts\"",
    "check": "yarn lint && yarn build --noEmit",
    "test": "jest --coverage --config jest.config.json --no-cache --roots tests --runInBand --verbose",
    "test:unit": "jest --coverage --config jest.config.json --no-cache --roots tests/unit --runInBand --verbose",
    "test:int": "jest --coverage --config jest.config.json --no-cache --roots tests/integration --runInBand --verbose",
    "test:ci": "./cicd/run_tests.sh",
    "start": "node -r ts-node/register/transpile-only -r tsconfig-paths/register ./dist/index.js",
    "postinstall": "husky install"
  },
  "dependencies": {
    "auto-bind": "4.0.0",
    "bcrypt": "^5.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.1.4",
    "express": "^4.18.2",
    "inversify": "^6.0.1",
    "jsonwebtoken": "^9.0.0",
    "mysql2": "^3.3.4",
    "reflect-metadata": "^0.1.13",
    "swagger-ui-express": "^4.6.3",
    "yaml": "^2.3.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/node": "^20.2.3",
    "@types/supertest": "^2.0.12",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^5.59.7",
    "@typescript-eslint/parser": "^5.59.7",
    "eslint": "^8.2.0",
    "eslint-config-google": "^0.14.0",
    "husky": "^8.0.0",
    "inversify-inject-decorators": "^3.1.0",
    "jest": "^29.5.0",
    "nodemon": "^2.0.22",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "*"
  }
}
